{
  "name": "isakwa-monorepo",
  "private": true,
  "packageManager": "yarn@4.6.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "infra:up": "cd infra/docker && docker-compose up -d",
    "infra:down": "cd infra/docker && docker-compose down",
    "infra:logs": "cd infra/docker && docker-compose logs -f",
    "infra:restart": "cd infra/docker && docker-compose restart",
    "dev:full": "yarn infra:up && yarn dev",
    "backend:dev": "cd apps/server && yarn start:dev",
    "backend:dev:fuseki": "cd apps/server && yarn start:dev:fuseki",
    "fuseki:start": "cd infra/docker && docker-compose up -d",
    "fuseki:stop": "cd infra/docker && docker-compose down",
    "fuseki:logs": "cd infra/docker && docker-compose logs -f fuseki",
    "dev:backend:full": "yarn fuseki:start && yarn backend:dev"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "turbo": "^2.5.6"
  }
}
